/* 路线容器 */
.route-container {
  padding: 20rpx;
}

/* 路线卡片 */
.route-card {
  position: relative;
  height: 300rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.route-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

/* 路线标题 */
.route-title {
  position: relative;
  z-index: 1;
  color: white;
  font-size: 32rpx;
  padding: 20rpx;
  text-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
}

/* 可点击卡片效果 */
.route-card[bindtap] {
  transition: all 0.3s;
}

.route-card[bindtap]:active {
  transform: scale(0.98);
  opacity: 0.9;
}