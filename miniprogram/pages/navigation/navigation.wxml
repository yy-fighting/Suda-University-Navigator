<view class="container">
  <!-- 地图容器 -->
  <map 
    id="navMap"
    longitude="{{longitude}}"
    latitude="{{latitude}}"
    scale="16"
    markers="{{markers}}"
    polyline="{{polyline}}"
    style="width: 100%; height: 80vh;"
  ></map>

  <!-- 导航信息面板 -->
  <view class="nav-panel">
    <view class="nav-info">
      <text>剩余距离：{{distance}}米</text>
      <text>预计时间：{{duration}}分钟</text>
    </view>
    <view class="action-btns">
      <button class="listen-btn" bindtap="startAudioGuide">收听讲解</button>
    </view>
  </view>
</view>