.spot-detail-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.image-swiper {
  width: 100%;
  height: 35vh;
}

.spot-image {
  width: 100%;
  height: 100%;
}

.description-container {
  flex: 1;
  padding: 20rpx;
  background: #fff;
  margin: 20rpx 0;
}

.description-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.button-container {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #f5f5f5;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
}

.voice-btn, .image-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.voice-btn {
  background: #fff;
  color: #333;
}

.image-btn {
  background: #8395a7;
  color: #fff;
} 