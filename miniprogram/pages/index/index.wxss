.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 750rpx; /* 等于100%屏幕宽度 */
  height: 100vh; /* 视口高度 */
  padding: 20rpx; /* 自适应间距 */
}

.welcome {
  font-size: 20px;
  margin-bottom: 20px;
  color: #333;
}

button {
  width: 200px;
  height: 40px;
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
  
  /* Flex 布局确保居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  
  /* 修复字体导致的视觉偏差 */
  padding: 0;
  line-height: 1;
  font-family: system-ui, -apple-system, sans-serif; /* 使用系统默认字体 */
}