/* index.wxss */
.container {
  width: 100vw;
  flex-direction: column;
  position: relative; /* 新增 */
  padding: 0;
}
 
.search-box-container {
  position: absolute;/* 相对于父容器 */
  top: 30rpx;
  left: 20rpx;
  right: 20rpx;
  z-index: 999; /* 确保在地图上方 */
  pointer-events: auto; /* 确保可以点击输入框 */
}

.search-box {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  padding: 12rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  transition: all 0.3s;
}

.search-box:active {
  transform: scale(0.98);
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 需要给地图容器添加相对定位 */
#map {
  width: 100%;
  height: 100%;
  position: relative; /* 新增 */
}

/* index.wxss 优化版 */
.card-container {
  position: absolute;
  top: 50vh;
  left: 0;
  right: 0;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.tab-bar {
  display: flex;
  justify-content: center;
  gap: 120rpx;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 2;
}

.tab-item {
  padding: 12rpx 0;
  position: relative;
}

.tab-text {
  font-size: 34rpx;
  color: rgb(0, 0, 0);
  transition: all 0.3s;
  padding: 8rpx 24rpx;
  border-radius: 50rpx;
}

.underline {
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 6rpx;
  background: white;
  border-radius: 3rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-item.active .tab-text {
  color: white;
  font-weight: 600;
  background: rgba(255,255,255,0.2);
}

.tab-item.active .underline {
  left: 0;
  right: 0;
  width: 100%;
  height: 6rpx;
}

.content-swiper {
  height: 30vh;
  border-radius: 32rpx;
  overflow: hidden;
}

.info-card {
  background: white;
  border-radius: 32rpx;
  height: 40vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 50rpx rgba(0,0,0,0.1);
}

.image-wrapper {
  height: 100rpx;
  flex-shrink: 0;
  overflow: hidden;
  border-radius: 32rpx 32rpx 0 0;
  background: #f5f7fa;
}

.card-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s;
}

.content-area {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  position: relative;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.card-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #2c3e50;
  max-width: 70%;
}

.open-time {
  font-size: 24rpx;
  color: #e74c3c;
  background: #fdedec;
  padding: 8rpx 24rpx;
  border-radius: 50rpx;
  flex-shrink: 0;
}

.card-desc {
  font-size: 30rpx;
  color: #7f8c8d;
  line-height: 1.6;
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  height: 40vh;
}

.action-button {
  align-self: flex-start;
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  padding: 5rpx;
  border-radius: 50rpx;
  transition: transform 0.2s;
}

.action-button:active {
  transform: scale(0.96);
}

.btn-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

.btn-icon {
  width: 28rpx;
  height: 28rpx;
}
