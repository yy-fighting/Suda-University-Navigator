.page-container {
  position: relative;
  width: 100%;
  min-height: 100vh;
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.container {
  position: relative;
  min-height: 100vh;
  background-color: rgba(255, 255, 255, 0.85);
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.header {
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.detail-content {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.detail-image {
  width: 100%;
  height: 400rpx;
  display: block;
}

.detail-info {
  padding: 30rpx;
}

.detail-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.detail-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
} 