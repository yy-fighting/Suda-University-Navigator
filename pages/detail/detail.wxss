.page-container {
  min-height: 100vh;
  position: relative;
  background-color: #f5f5f5;
}

.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.3;
}

.container {
  padding: 20rpx;
  position: relative;
  z-index: 1;
}

.header {
  padding: 30rpx 0;
  text-align: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.detail-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.detail-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.detail-info {
  padding: 20rpx;
}

.detail-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.detail-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  text-align: justify;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 40rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.detail-location {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
  display: block;
}

.nav-button {
  position: fixed;
  right: 30rpx;
  bottom: 50rpx;
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  z-index: 100;
}

.nav-button:active {
  transform: scale(0.95);
}

.nav-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.nav-button text {
  font-size: 28rpx;
} 